<resources>
    <!-- Cards -->
    <style name="rdnt_cardview_text_primary">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
    </style>

    <style name="TextAppearance.SigmaInfoTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">13.5sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.SigmaInfoSummary">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="rdnt_cardview_text_secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
    </style>

        <style name="op_control_text_style_base">
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="op_control_text_style_body1" parent="@style/op_control_text_style_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>
    
    <style name="op_control_text_style_h6" parent="@style/op_control_text_style_base">
        <item name="android:textSize">18.0sp</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>
